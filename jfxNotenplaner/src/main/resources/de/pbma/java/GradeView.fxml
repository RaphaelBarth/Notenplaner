<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import java.util.*?>

<VBox fx:controller="de.pbma.java.GradeView"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox maxWidth="99999">
			<children>
				<TextField fx:id="tfFilter" maxWidth="99999"
					HBox.hgrow="ALWAYS" promptText="Fächer filtern" />
				<Button text="Filtern" fx:id="btFilter" onAction="#onFilter" />
			</children>
		</HBox>
		<TableView maxWidth="99999" maxHeight="99999"
			VBox.vgrow="ALWAYS" fx:id="tvGrades">
			<placeholder>
				<Label text="Kein Curriculum ausgewählt." />
			</placeholder>
		</TableView>
	</children>
</VBox>

